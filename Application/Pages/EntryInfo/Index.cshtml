@page
@model Application.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table table-hover table-dark"  >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EntryInfo[0].EmployerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryInfo[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryInfo[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryInfo[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryInfo[0].Decision)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EntryInfo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Decision)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
